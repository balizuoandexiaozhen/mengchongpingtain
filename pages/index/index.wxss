/**index.wxss**/
.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
}

.map {
  width: 100%;
  height: 100%;
}

.pin {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-100%);
}

.center {
  position: absolute;
  bottom: 50rpx;
  left: 30rpx;
}

.img {
  width: 30px;
  height: 30px;
} 

.btns {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
}
.btn {
  flex: 1;
  text-align: center;
  background: #03bbd5;
  line-height: 80rpx;
  color: #fff;
}

.btn:nth-child(1) {
  background: #ff9700;
}